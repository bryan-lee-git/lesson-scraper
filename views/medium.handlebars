<main>
    <div class="container center-align">
        <div class="row">
            <br />
            <br />
            <br />
            <img class="col s12 m4 offset-m4" src="/img/medium-swiper.png" alt="">
        </div>
        <div class="col s12 m6">
            <table class="responsive-table centered highlight z-depth-1 blue lighten-5" id="medium-table">
                <thead>
                    <th>Title (Click to Navigate to Post)</th>
                    <th>Blurb</th>
                    <th>Notes</th>
                </thead>
                <tbody>
                    {{#each medium}}
                        <tr>
                            <td><a href="{{link}}">{{title}}</a></td>
                            <td>{{blurb}}</a></td>
                            <td><button class="btn">Notes</button></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</main>