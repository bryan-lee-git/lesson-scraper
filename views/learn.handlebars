<main>
    <div class="container center-align">
        <div class="row">
            <br />
            <br />
            <br />
            <img class="col s12 m8 offset-m2" src="/img/code-learn.png" alt="">
        </div>
        <br />
        <br />
        <div class="col s12 m6">
            <table class="responsive-table centered highlight z-depth-1 blue lighten-5" id="learn-table">
                <thead>
                    <th>Resource Title</th>
                    <th>Resource Description</th>
                    <th>Open</th>
                    <th>Notes</th>
                </thead>
                <tbody>
                    {{#each learn}}
                        <tr>
                            <td><a href="{{link}}" target="_blank">{{title}}</a></td>
                            <td>{{description}}</a></td>
                            <td><a href="{{link}}" target="_blank"><button class="btn blue lighten-2">Open</button></a></td>
                            <td data-id="{{_id}}" class="notes-btn modal-trigger" href="#notes"><button class="btn">Notes</button></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</main>
{{> Modal/notes-block}}
<script src="/js/learn.js"></script>