<main>
    <div class="container center-align">
        <div class="row">
            <br />
            <br />
            <br />
            <img class="col s12 m4 offset-m4" src="/img/code-learn.png" alt="">
        </div>
        <div class="col s12 m6">
            <table class="responsive-table centered highlight z-depth-1 blue lighten-5" id="learn-table">
                <thead>
                    <th>Learning Resource (Click to Navigate to Lesson)</th>
                    <th>Site Description</th>
                    <th>Notes</th>
                </thead>
                <tbody>
                    {{#each learn}}
                        <tr>
                            <td><a href="{{link}}">{{title}}</a></td>
                            <td>{{description}}</a></td>
                            <td><button class="btn">Notes</button></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</main>